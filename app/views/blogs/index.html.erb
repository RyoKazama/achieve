<div class="container">
    <div class="wrapper col-mid-8 col-mid-offset-2 col-sm-10">
    
<p><%= notice %></p>

<h1>ブログ一覧</h1>
<%= link_to "ブログを作成する", new_blog_path, class:'btn btn-default' %>

<% @blogs.each do |blog| %>
<p>タイトル：<%=blog.title %></p>
<p>本文：<%=blog.content %></p>
<p>投稿者：<%=blog.user_name %></p>
<%= link_to "ブログを編集する", edit_blog_path(blog.id) %>
<%= link_to "ブログを削除する", blog_path(blog.id), method: :delete, data: {confirm: '本当に削除して良いですか？'} %>
<% end %>

</div>
</div>

<div id="page-blog-btn" class="page-blog-btn">
    <p><a class="move-blog-top" id="move-blog-top">▲</a></p>
</div>